<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.livelife.pioalert.InfoActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/signin_bg_600"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/claim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:textAlignment="center"
        android:text="CLAIM"
        android:maxLines="2"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_above="@+id/claimText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"/>



    <TextView
        android:id="@+id/claimText"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:maxLines="5"
        android:text="Claim desc..."
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/closeButton"
        android:layout_alignStart="@+id/claim"
        android:layout_alignEnd="@+id/claim"/>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/signin_logo_pio"
        android:id="@+id/imageView2"
        android:layout_above="@+id/claim"
        android:layout_marginBottom="22dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/appVersion"
        android:alpha="0.7"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="versione X.X\nbuild XX"
        android:textColor="#ffffff"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"/>

    <Button
        android:textColor="#ffffff"
        android:id="@+id/closeButton"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:text="chiudi"
        android:background="@drawable/button_round_corners"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
